var config = require('nconf');
config.file({file: './test/lib/config.json'});

var chai = require("chai");
var chaiAsPromised = require("chai-as-promised");
chai.use(chaiAsPromised);
chai.should();

var wd = require('wd');
var asserters = wd.asserters;

var url = config.get("url");
var username = config.get("username");
var password = config.get("password");

describe("/dcm-admin/supporting-data/tc7-create-state-rule", function() {
    this.timeout(60000);
    var browser;

    before(function (done) {
        chaiAsPromised.transferPromiseness = wd.transferPromiseness;
        browser = wd.promiseChainRemote(config.get("remote"));
        common.configBrowser(browser, config.get("environment")).nodeify(done);
    });

    after(function (done) {
        //browser.quit().nodeify(done);
    });

    it("should login", function (done) {
        common.login(browser, url, username, password).nodeify(done);
    });
    
    it("should load dcm admin page", function(done) {
      browser
        .frame('navbar')
        .elementById('DCM Admin').click()
        .nodeify(done);
    });

    it("should load supporting data page", function(done) {
        browser
            .frame()
            .frame('sidebar')
            .elementById('SupportingData_sub').click()
            .nodeify(done);
    });
    
    it("should load search state rules page", function(done) {
    	browser
			.frame()
			.frame('container')
			.frame('cacheframe1')
			.frame('subpage')
			.elementByCss("button[title='Search Course']").click()
			.frame()
			.frame('container')
			.frame('cacheframe1')
			.frame('subpage')
			.elementByLinkText('Search State Rules').click()
			.nodeify(done);
    });
    
    it("should create data - 1", function(done) {
    	browser
			.frame()
			.frame('container')
			.frame('cacheframe1')
			.frame('subpage')
			.elementById('Button_LicenseAppt_Main_NewLicenseApptv').click()
			.frame()
			.frame('container')
			.frame('cacheframe1')
			.frame('proppage')
			.elementById('AppointmentNoticePeriod').type('5')
			.elementById('LicenseExpiryGracePeriod').type('5')
			.elementById('LicenseRenewalBasisFixedDayMonth').type('12/12')
			.elementById('AppointmentExpiryBasisFixedDayMonth').type('12/12')
			.elementById('AppointmentTerminationFixedDayMonth').type('12/12')
			.elementById('validate').click()
			.elementById('save').click()
			// TODO hit error The State License/Appt Data is already exists.
			// Waiting for instructions from Maint team
    });
    
    it("should create data - 2", function(done) {
    	
    });
});
